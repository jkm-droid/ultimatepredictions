<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:layout_height="wrap_content">
    <!--    for space-->
    <TextView
        android:background="#7EB8B8"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        android:backgroundTint="#96BEC2"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_time"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/time"
                    android:layout_marginTop="10dp"
                    android:textColor="#031A2D"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:text="@string/_10_mar_2021_10_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/vip_status"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/vip_status"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:gnore="SmallSp"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_tips"
                android:layout_below="@+id/layout_time"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/team1"
                        android:text="@string/chelsea_fc"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/home"
                        android:text="@string/home"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/vs"
                        android:text="@string/vs"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:id="@+id/team2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/man_utd"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/away"
                        android:text="@string/away"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/layout_tips"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/correct"
                    android:text="@string/pick_away_2_74"
                    android:textColor="#E64A19"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>