<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#7EB8B8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vip_image1"
            android:src="@drawable/vip_fire"
            android:layout_width="30dp"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/vip_textview"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/vip_image2"
            android:src="@drawable/vip_fire"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_error"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/error_icon"
            android:layout_marginBottom="0dp"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:id="@+id/error"
            android:textColor="@color/green"
            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_below="@+id/layout_vip"
        android:layout_width="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_height="match_parent"/>

</RelativeLayout>